#!/bin/sh

makeTmux() {
	tmux new-session -d -s brainstorm
	tmux send-keys -t brainstorm "matlab -nodesktop -nosplash" C-m
	notify-send " Starting MATLAB..." -t 2000
}

tmux has-session -t brainstorm || makeTmux
tmux send-keys -t brainstorm "cd $BRAINSTORM" C-m
tmux send-keys -t brainstorm "brainstorm" C-m
notify-send " Starting Brainsorm..." -t 7000
