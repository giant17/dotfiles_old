# terminal emulator
super + Return
	$TERMINAL

# program launcher
super + d
	rofi -show drun

# execute apps
super + w
	notify-send "Starting Browser..." -t 1000  && $BROWSER

super  + F1
	new_app.sh

# File manager
super + r
	$TERMINAL -e vifmrun

super + n
	$TERMINAL -e newsboat

# GTD shortcuts
super + y; y
	inbox.sh
super + y; p
	process.sh
#super + y; j
# 5 minute journal
#super + y; w
#weeekly review - add to calendar


# Wiki shortcuts
super + v
	$TERMINAL -e nvim -c VimwikiIndex

# Reload config
super + F6
	torwrap.sh
super + shift + Escape
	killXorg.sh
super + grave; e
	rofimoji
super + grave; f
	getFontawesome.sh
super + F9
	mount.sh
super + F10
	unmount.sh
super + Print
	record.sh
super + F12
	wal_choose.sh
# Thinkpad german Druck
shift + Print
	maimpick.sh
super + F2
	monitor.sh --auto
super + F3
	monitor.sh --manual

# Volume

XF86AudioMute
	lmc.sh mute
XF86AudioLowerVolume
	lmc.sh down
XF86AudioRaiseVolume
	lmc.sh up

