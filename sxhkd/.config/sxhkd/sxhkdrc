# terminal emulator
super + Return
	$TERMINAL

# program launcher
super + d
	rofi -show drun

# execute apps
# super + w
# 	notify-send "Starting Browser..." -t 1000  && $BROWSER
super + w
	duck.sh

super  + F1
	new_app.sh

# File manager
super + r
	$TERMINAL -e vifmrun

super + e
	$TERMINAL -e neomutt
super + m
	$TERMINAL -e ncmpcpp
super + n
	$TERMINAL -e newsboat

