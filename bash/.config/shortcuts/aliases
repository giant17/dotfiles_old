stw() {
	folder=$(ls $REPOS/dotfiles/* | fzf)
	stow -vt ~ $folder ;}

#fs() { ls $HOME/.local/bin/*/* | grep -v '__' | fzf | xargs $EDITOR ;}
ff() { cd $HOME && du -a $(ls $HOME) | awk '{print $2}' | fzf | xargs -r -I % $EDITOR % ;}
fd() {
	dir=$(cd $HOME && du $(ls $HOME) | awk '{print $2}' | fzf)
	cd $dir && ls -a ;}
